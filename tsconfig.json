{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es6"
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "@types",
    "public"
  ]
}
